{
	"application_name"	: "droapps /// Do the road for the apps.",
	
	
	
	
	"config":
	{
		"environment"					: "development",
		"debug"							: true,
		"debug_options"					: [ "log" , "info" , "error" ],
		"dependencies_use_cdn"			: true,
		"dependencies_block_content"	: true
	},
	
	
	
	
	"global_variables":
	{
		"BASE"			: "",
		"ASSETS"		: "/static",
		"JS"			: "/static/js",
		"LIBS"			: "/static/js/libs",
		"CLASSES"		: "/static/js/classes",
		"SECTIONS"		: "/static/js/sections",
		"DROAPPS"		: "/static/js/droapps",
		"IMG"			: "/static/img"
	},
	
	
	
	
	"global_dependencies":
	{
		
		
		"javascripts"	:
		{
			"load_before":
			[
				{
					"name"					: "jQuery",
					"local_source"			: "${LIBS}/jquery-1.4.2.js",
					"local_minified"		: "${LIBS}/jquery-1.4.2.min.js",
					"cdn_source"			: "http://code.jquery.com/jquery-1.4.2.js",
					"cdn_minified"			: "http://code.jquery.com/jquery-1.4.2.min.js"
				}
			],
			
			"load_after":
			[
				{
					"name"					: "swfobject",
					"local_source"			: "${LIBS}/swfobject-2.2.js",
					"local_minified"		: "${LIBS}/swfobject-2.2.min.js",
					"cdn_source"			: "http://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject_src.js",
					"cdn_minified"			: "http://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js"
				}
			]
		},
		
		
		
		"stylesheets"	: [],
		
		
		
		"images"	:
		{
			"load_before":
			[
				"${IMG}/main-logo.jpg",
				"${IMG}/bg-page.jpg",
				"${IMG}/bg-header.gif"
			],
			
			"load_after":
			[
				"${IMG}/bg-popup.jpg",
				"${IMG}/icon-popup.png"
			]
		}
		
		
		
	},
	
	
	
	
	"sections":
	{
		"home":
		{
			"controller": "${SECTIONS}/home.js",
			
			"dependencies":
			{
				"javascripts"	:
				[
					{
						"name"					: "map",
						"local_source"			: "${CLASSES}/map.js"
					},
					{
						"name"					: "circuit",
						"local_source"			: "${CLASSES}/circuit.js"
					},
					{
						"name"					: "activity",
						"local_source"			: "${CLASSES}/activity.js"
					}
				],
				
				"stylesheets"	: [],
				"images"		: []
			}
		},
		
		"section1":
		{
			"controller": "${SECTIONS}/section1.js",
			
			"dependencies":
			{
				"javascripts"	:
				[
					{
						"name"					: "map",
						"local_source"			: "${CLASSES}/map1.js"
					},
					{
						"name"					: "circuit",
						"local_source"			: "${CLASSES}/circuit1.js"
					},
					{
						"name"					: "activity",
						"local_source"			: "${CLASSES}/activity1.js"
					}
				],
				
				"stylesheets"	: [],
				"images"		: []
			}
		},
		
		"section2":
		{
			"controller": "${SECTIONS}/section2.js",
			
			"dependencies":
			{
				"javascripts"	:
				[
					{
						"name"					: "map",
						"local_source"			: "${CLASSES}/map2.js"
					},
					{
						"name"					: "circuit",
						"local_source"			: "${CLASSES}/circuit2.js"
					},
					{
						"name"					: "activity",
						"local_source"			: "${CLASSES}/activity2.js"
					}
				],
				
				"stylesheets"	: [],
				"images"		: []
			}
		}
	}
}